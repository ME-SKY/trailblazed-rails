<h2><%= page_title %></h2>
<%= form_for [post, contract] do |f| -%>

  <%= f.label :author %> <br>
  <%= f.text_field :author %> <br>

  <%= f.label :message %> <br>
  <%= f.text_area :message %> <br>

  <%= f.submit "Submit" %>
<% end -%>
<hr>
<%= link_to "Back to Post", post_path(post) %>